<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.finalScore">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/Cal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_score"
        android:layout_alignRight="@+id/img_score"
        android:layout_below="@+id/que_correct"
        android:layout_marginTop="39dp"
        android:onClick="smth"
        android:text="Calculate Score" />

    <ImageView
        android:id="@+id/img_score"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back3" />

    <TextView
        android:id="@+id/you_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="You are a"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/you_r"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Congratulations"
        android:textAllCaps="true"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/you_r"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="......."
        android:textAllCaps="true"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/que_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true"
        android:text="Questions were correct"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Congrats"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="..."
        android:textSize="40sp" />

    </RelativeLayout>
</ScrollView>
